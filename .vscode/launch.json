  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server/main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["${workspaceRoot}/tests/main.spec.js"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}